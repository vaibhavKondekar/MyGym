            android:textSize="18sp"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/radioExpired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expired"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </RadioGroup>

    <Button
